<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
           <record id="view_presence_form" model="ir.ui.view">
            <field name="name">presence.form</field>
            <field name="model">presence</field>
            <field name="arch" type="xml">
            <form string="Presence">
                <group>
                    <field name="date"/>  <!-- Assurez-vous que le champ "date" existe dans le modèle -->
                    <field name="heure_arrivee"/>
                    <field name="heure_depart"/>
                    <field name="nbreHeureJour"/>
                </group>
            </form>
        </field>
    </record>

        <record id="view_presence_tree" model="ir.ui.view">
            <field name="name">presence.tree</field>
            <field name="model">presence</field>
            <field name="arch" type="xml">
                <tree string="Présences">
                    <field name="date"/>
                    <field name="heure_arrivee"/>
                    <field name="heure_depart"/>
                    <field name="nbreHeureJour"/>
                </tree>
            </field>
        </record>
