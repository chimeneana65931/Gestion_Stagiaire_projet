            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="entreprise_accueil"/>
                        <field name="tuteur"/>
                        <field name="date_debut_stage"/>
                        <field name="date_fin_stage"/>
                        <field name="duree_stage"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

