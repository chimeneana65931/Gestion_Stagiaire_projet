        <field name="name">gestion.stagiaire.tree</field>
        <field name="model">gestion.stagiaire</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="entreprise_accueil"/>
                <field name="tuteur"/>
